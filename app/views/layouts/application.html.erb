<!DOCTYPE html>
<html>
<head>
  <title>Football</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <h1>Football Pool 2015</h1>
    <nav>
        <h3><%= link_to 'Leaderboard', records_path %></h3>
      <% if current_user %>
        <h3><%= link_to 'Spreads', spreads_path %></h3>
        <h3><%= link_to 'Signout', destroy_user_session_path, :method => :delete %></h3>
      <% else %>
        <h3><%= link_to 'Signup', new_user_registration_path %></h3>
        <h3><%= link_to 'Login', new_user_session_path %></h3>
      <% end %>
    </nav>
  </header>

<%= yield %>

</body>
</html>
